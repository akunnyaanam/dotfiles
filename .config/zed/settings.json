// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "icon_theme": "Monospace Icon Theme - Dark",
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.5-sonnet"
    }
  },
  "context_servers": {
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "default_minimum_tokens": "10000"
      }
    }
  },
  "debugger": {
    "dock": "right"
  },
  "git_panel": {
    "dock": "right"
  },
  "search": {
    "button": false,
    "case_sensitive": true
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "wrap_guides": [90],
  "show_wrap_guides": true,
  "cursor_blink": false,
  "inlay_hints": {
    "enabled": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "soft_wrap": "editor_width",
  "ui_font_size": 14,
  "ui_font_family": "FiraCode Nerd Font",
  "buffer_font_size": 14,
  "buffer_font_family": "FiraCode Nerd Font",
  "base_keymap": "VSCode",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Flexoki Dark"
  },
  "languages": {
    "PHP": {
      "language_servers": ["intelephense", "!phpactor", "..."],
      "formatter": "language_server"
    }
  },
  "file_types": {
    "PHP": ["*.php"],
    "Blade": ["*.blade.php"]
  },
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "button": "never",
    "dock": "bottom"
  },
  "outline_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right",
    "indent_size": 10,
    "hide_root": true
  },
  "terminal": {
    "font_family": "FiraCode Nerd Font Mono",
    "font_size": 12,
    // Terminal line height: comfortable (1.618), standard(1.3) or `{ "custom": 2 }`
    "line_height": "comfortable"
  },
  "minimap": {
    "show": "always",
    "thumb": "always",
    "thumb_border": "left_open",
    "current_line_highlight": null
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    // Laravel
    "**/node_modules",
    "**/vendor"
  ],
  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  }
}
